<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davidhernandezvilaltagmail.projecte1.Signup" >

    <TextView
        android:id="@+id/signuptitol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="44dp"
        android:text="@string/signuptitol"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp" />
    <TextView
        android:layout_width="match_parent"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_marginTop="24dp"
        android:id="@+id/firstname"
        android:layout_below="@+id/signuptitol"
        android:layout_alignLeft="@+id/signuptitol"
        android:layout_alignStart="@+id/signuptitol" />

    <TextView
        android:id="@+id/surname"
        android:textColor="@android:color/background_dark"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="Surname"        
        android:layout_marginTop="14dp"
        android:layout_below="@+id/firstnameedit"
        android:layout_alignLeft="@+id/firstnameedit"
        android:layout_alignStart="@+id/firstnameedit" />

    <TextView
        android:id="@+id/email"
        android:textColor="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Email"
        android:layout_below="@+id/surnameedit"
        android:layout_alignLeft="@+id/surnameedit"
        android:layout_alignStart="@+id/surnameedit" />

    <TextView
        android:id="@+id/usuari"
        android:textColor="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="16sp"
        android:text="Username"
        android:layout_below="@+id/emailedit"
        android:layout_alignLeft="@+id/emailedit"
        android:layout_alignStart="@+id/emailedit" />

    <TextView
        android:id="@+id/contrasenya"
        android:textColor="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textSize="16sp"
        android:text="Password"
        android:layout_below="@+id/usuariedit"
        android:layout_alignLeft="@+id/contrasenyaedit"
        android:layout_alignStart="@+id/contrasenyaedit" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jones"
        android:layout_marginRight="50dp"
        android:textSize="18sp"
        android:id="@+id/surnameedit"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/surname"
        android:layout_alignLeft="@+id/surname"
        android:layout_alignStart="@+id/surname" />

    <EditText
        android:id="@+id/firstnameedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Misko"
        android:layout_marginRight="50dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/firstname"
        android:layout_alignLeft="@+id/firstname"
        android:layout_alignStart="@+id/firstname" />

    <EditText
        android:id="@+id/emailedit"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="miskojones@example.com"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:id="@+id/usuariedit"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:hint="MiskoJones69"
        android:layout_below="@+id/usuari"
        android:layout_alignLeft="@+id/usuari"
        android:layout_alignStart="@+id/usuari"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/contrasenyaedit"
        android:inputType="textPassword"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:hint="example123"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/contrasenya"
        android:layout_alignLeft="@+id/usuariedit"
        android:layout_alignStart="@+id/usuariedit" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/signupejar"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/contrasenyaedit"
        android:layout_alignRight="@+id/contrasenyaedit"
        android:layout_below="@+id/contrasenyaedit"
        android:backgroundTint="@color/BlauURL"
        android:text="@string/signuptitol"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
